<h3>Create a Movie Party for <%= @movie[:movie_title] %></h3>

<section class = "new_party">
<h3>Viewing Party Details</h3>
<%= form_with url: "/users/#{@user.id}/movies/238/viewing_party", method: :post, local: true do |form| %>
  <%= form.label :duration_of_party %>
  <%= form.number_field :duration_of_party, min: @movie[:runtime], value: @movie[:runtime] %>
  <%= form.label :when %>
  <%= form.date_field :when %>
  <%= form.label :start_time %>
  <%= form.time_field :start_time %>
    <p>Invite Other Users</p>
    <ul>
      <% @users.each do |user| %>
        <li>
          <%= form.check_box :users, { multiple: true }, user.id %>
          <%= form.label(:users, "#{user.name} (#{user.email})", for: user.id) %>
        </li>
      <% end %>
    </ul>
  <%= form.submit "Create Party" %>
<% end %>

</section>