<h1>Welcome to Viewing Party Lite</h1>

<% if current_user %>
  <%= link_to "Log Out", logout_path, method: :patch%>
<% else %>
  <%=button_to "Create a New User", "/register", method: :get %><br>

  <%= link_to "Log In", login_path %>
<% end %>

<section class="users">
  <% if current_user %>
    <h3>Existing Users</h3>
    <ul>
      <% @users.each do |user| %>
        <li><%= "#{user.email}" %></li>
      <% end %>
    </ul>
  <% else %>
<% end %>
</section>